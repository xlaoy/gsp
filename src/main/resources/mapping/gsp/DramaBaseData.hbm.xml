<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
    <class name="com.gewara.model.drama.DramaBaseData" table="drama_basedata" schema="gsp">
    
       <id name="recordid" type="long">
            <column name="recordid"  />
			<generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
			    <param name="optimizer">none</param>
			    <param name="increment_size">1</param>
			    <param name="sequence_name">seq_drama</param>
			</generator>
       </id>
       
       <property name="code"		column="code"	type="string" />
       <property name="name"		column="name"	type="string" />
       <property name="type"		column="type"	type="string" />
       <property name="special"		column="special"	type="string" />
       <property name="updatetime"		column="updatetime"	type="timestamp" />
       <property name="gspupdatetime"		column="gspupdatetime"	type="timestamp" />
        
    </class>
</hibernate-mapping>
